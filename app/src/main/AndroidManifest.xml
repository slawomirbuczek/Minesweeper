<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pk.minesweeper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity
            android:name=".game.controllers.MenuController"
            android:screenOrientation="portrait" />

        <activity
            android:name=".game.controllers.LocalRankingController"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.controllers.GameController"
            android:screenOrientation="portrait" />
        <activity
            android:name=".game.controllers.LevelSelectController"
            android:screenOrientation="portrait" />

        <activity
            android:name=".game.controllers.GlobalRankingController"
            android:screenOrientation="portrait" />

        <activity
            android:name=".game.controllers.LoginController"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".game.controllers.RegisterController"
            android:screenOrientation="portrait" />

        <activity
            android:name=".game.controllers.StatisticsController"
            android:screenOrientation="portrait" />

    </application>

</manifest>